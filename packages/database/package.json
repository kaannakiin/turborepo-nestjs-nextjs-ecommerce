{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "browser": {
    "./dist/index.js": "./dist/client.js",
    "./dist/index.mjs": "./dist/client.mjs"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "bun run db:generate && tsup src/index.ts src/client.ts --format esm,cjs",
    "dev": "tsup src/index.ts src/client.ts --format esm,cjs --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:views": "bun src/seeds/applyViews.ts",
    "db:deploy:full": "bun run db:deploy && bun run db:views",
    "db:prisma": "prisma studio"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "argon2": "^0.44.0",
    "iconv-lite": "^0.7.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.8.2",
    "@types/pg": "^8.15.5",
    "dotenv": "^16.4.7",
    "eslint": "9.13.0",
    "prisma": "^7.0.0",
    "tsup": "^8.0.0",
    "typescript": "5.6.3"
  }
}
