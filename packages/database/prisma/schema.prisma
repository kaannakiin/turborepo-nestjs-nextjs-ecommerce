enum OrderStatus {
  // Sipariş oluşturuldu ancak ödeme henüz tamamlanmadı veya onaylanmadı.
  PENDING
  // Ödeme başarıyla alındı. Depoya/satıcıya "hazırlayın" diye iletilebilir.
  CONFIRMED
  // Siparişin içindeki en az bir OrderItem hazırlanıyor.
  PROCESSING
  // Sipariş içindeki BAZI item'lar kargolandı.
  PARTIALLY_SHIPPED
  // Sipariş içindeki TÜM item'lar kargolandı.
  SHIPPED
  // Sipariş içindeki BAZI item'lar teslim edildi.
  PARTIALLY_DELIVERED
  // Sipariş içindeki TÜM item'lar teslim edildi.
  DELIVERED
  // Sipariş (veya içindeki tüm item'lar) iptal edildi.
  CANCELLED
  // Siparişin BİR KISMI için para iadesi yapıldı.
  PARTIALLY_REFUNDED
  // Siparişin TAMAMI için para iadesi yapıldı.
  REFUNDED
  // Sipariş teslim edildi ve iade/değişim süresi doldu. Arşivlenebilir.
  COMPLETED
}

enum OrderItemStatus {
  // Siparişin ödemesi bekleniyor.
  PENDING
  // Siparişin ödemesi alındı. Ürün depoda hazırlanıyor.
  PREPARING
  // Bu ürün kargoya verildi.
  SHIPPED
  // Bu ürün müşteriye teslim edildi.
  DELIVERED
  // Müşteri bu ürünü (kargolanmadan) iptal etme talebi gönderdi.
  CANCEL_REQUESTED
  // İptal talebi reddedildi.
  CANCEL_REJECTED
  // İptal talebi onaylandı.
  CANCELLED
  // Müşteri ürünü teslim aldıktan sonra iade talebi oluşturdu.
  REFUND_REQUESTED
  // İade talebi incelendi ve "ürünü geri gönderebilirsin" onayı verildi.
  REFUND_REQUEST_ACCEPTED
  // İade talebi reddedildi.
  REFUND_REJECTED
  // Ürün depoya geri geldi ve müşteriye para iadesi yapıldı.
  REFUNDED
}

enum PaymentStatus {
  // Ödeme başarısız oldu
  FAILED
  // Ödeme tamamlandı
  PAID
  // Kısmi ödeme alındı (örn: Kısmi iade sonrası)
  PARTIALLY_PAID
  // Ödeme bekleniyor
  PENDING
}

enum PaymentType {
  APP_PAYMENT
  BANK_REDIRECT
  BUY_ONLINE_PAY_AT_STORE
  CASH
  CASH_ON_DELIVERY
  CREDIT_CARD
  CREDIT_CARD_ON_DELIVERY
  DIRECT_DEBIT
  GIFT_CARD
  MONEY_ORDER
  OTHER
  PAY_LATER
  SLICE_IT
  WALLET
}

enum ShipmentStatus {
  // Kargo bilgisi girildi, kargo şubesine verilmedi
  PENDING
  // Yolda
  IN_TRANSIT
  // Teslim Edildi
  DELIVERED
  // Teslimat Başarısız
  FAILED
}

model OrderItemSchema {
  id              String   @id @default(cuid())
  buyedPrice      Decimal // Para birimi için Float yerine Decimal
  quantity        Int      @default(1)
  totalPrice      Decimal
  totalFinalPrice Decimal
  discountAmount  Decimal?
  taxAmount       Decimal?

  productSnapshot Json
  variantSnapshot Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  status          OrderItemStatus @default(PENDING)

  // İlişkiler
  variantId String?
  variant   ProductVariantCombination? @relation(fields: [variantId], references: [id])
  productId String
  product   Product                    @relation(fields: [productId], references: [id])
  orderId   String
  order     OrderSchema                @relation(fields: [orderId], references: [id])

  // Bu item hangi sevkiyata (kargoya) ait?
  shipmentId String?
  shipment   Shipment? @relation(fields: [shipmentId], references: [id])
}

model OrderSchema {
  id              String   @id @default(cuid())
  totalPrice      Decimal
  totalFinalPrice Decimal
  discountAmount  Decimal?
  taxAmount       Decimal?
  shippingCost    Decimal?

  currency  Currency @default(TRY)
  locale    Locale   @default(TR)
  orderNote String?  @db.Text

  paymentProvider PaymentProvider @default(IYZICO)
  paymentStatus   PaymentStatus   @default(PENDING) // Özet ödeme durumu
  orderStatus     OrderStatus     @default(PENDING) // Özet sipariş durumu

  shippingAddressSnapshot Json?
  billingAddressSnapshot  Json?
  cargoRuleSnapshot       Json?

  clientIp  String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  cartId                  String?
  cart                    Cart?          @relation(fields: [cartId], references: [id])
  userId                  String?
  user                    User?          @relation(fields: [userId], references: [id])
  shippingAddressRecordId String?
  shippingAddressRecord   AddressSchema? @relation("OrderSchemaShippingAddress", fields: [shippingAddressRecordId], references: [id])
  billingAddressRecordId  String?
  billingAddressRecord    AddressSchema? @relation("OrderSchemaBillingAddress", fields: [billingAddressRecordId], references: [id])
  cargoRuleId             String?
  cargoRule               CargoRule?     @relation(fields: [cargoRuleId], references: [id])

  // Siparişe bağlı tüm alt modeller
  itemsSchema  OrderItemSchema[]
  transactions OrderTransactionSchema[]
  shipments    Shipment[]
}

model OrderTransactionSchema {
  id      String      @id @default(cuid())
  orderId String
  order   OrderSchema @relation(fields: [orderId], references: [id])

  // Iyzico, PayTR vb. provider'dan gelen unique işlem ID'si
  providerTransactionId String        @unique
  amount                Decimal // Bu işlemde ne kadar çekildi/iade edildi
  status                PaymentStatus // FAILED, PAID, PENDING
  paymentType           PaymentType // CREDIT_CARD, WALLET, etc.

  // Hata ayıklama için provider'dan dönen tüm ham response
  gatewayResponse Json?

  createdAt DateTime @default(now())
}

model Shipment {
  id      String      @id @default(cuid())
  orderId String
  order   OrderSchema @relation(fields: [orderId], references: [id])

  trackingCode     String? // Kargo Takip Kodu
  shippingProvider String? // MNG, Aras, Yurtiçi, etc.
  status           ShipmentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Bu sevkiyatın içinde hangi ürünler var?
  orderItems OrderItemSchema[]
}
