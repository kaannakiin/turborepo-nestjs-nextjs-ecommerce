{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL"],
  "globalDependencies": ["**/.env", "**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".expo/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["BACKEND_URL", "NEXT_PUBLIC_BACKEND_URL", "NEXT_PUBLIC_BASE_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "env": [
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "PORT",
        "DOMAIN",
        "MINIO_ENDPOINT",
        "MINIO_ENDPOINT_SETTINGS",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "ALLOWED_ORIGINS",
        "IYZICO_API_KEY",
        "IYZICO_SECRET_KEY",
        "IYZICO_BASE_URL",
        "IYZICO_CALLBACK_URL",
        "COOKIE_SECRET",
        "CSRF_SECRET",
        "NODE_ENV",
        "CSRF_ENABLED",
        "REDIS_URL",
        "DATABASE_URL"
      ],
      "outputs": ["dist/**"]
    },
    "backend#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "PORT",
        "DOMAIN",
        "MINIO_ENDPOINT",
        "MINIO_ENDPOINT_SETTINGS",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "ALLOWED_ORIGINS",
        "IYZICO_API_KEY",
        "IYZICO_SECRET_KEY",
        "IYZICO_BASE_URL",
        "IYZICO_CALLBACK_URL",
        "COOKIE_SECRET",
        "CSRF_SECRET",
        "NODE_ENV",
        "CSRF_ENABLED",
        "REDIS_URL",
        "DATABASE_URL"
      ]
    },
    "web#start": {
      "cache": false,
      "persistent": true,
      "env": ["BACKEND_URL", "NEXT_PUBLIC_BACKEND_URL", "NEXT_PUBLIC_BASE_URL"]
    },
    "database#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false,
      "outputs": [],
      "env": ["DATABASE_URL"]
    },
    "db:prisma": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
