{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "MINIO_ENDPOINT",
    "JWT_ACCESS_TOKEN_SECRET",
    "JWT_REFRESH_TOKEN_SECRET",
    "JWT_ACCESS_TOKEN_EXPIRATION_MS",
    "JWT_REFRESH_TOKEN_EXPIRATION_MS",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "FACEBOOK_APP_ID",
    "FACEBOOK_APP_SECRET"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".expo/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": ["BACKEND_URL", "NEXT_PUBLIC_BACKEND_URL", "MINIO_ENDPOINT"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "env": [
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "MINIO_ENDPOINT"
      ],
      "outputs": ["dist/**"]
    },
    "backend#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "JWT_ACCESS_TOKEN_SECRET",
        "JWT_REFRESH_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT"
      ]
    },
    "web#start": {
      "cache": false,
      "persistent": true,
      "env": ["BACKEND_URL", "NEXT_PUBLIC_BACKEND_URL"]
    },
    "database#build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
