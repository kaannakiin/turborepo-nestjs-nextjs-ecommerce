{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "MINIO_ENDPOINT",
    "MINIO_ACCESS_KEY",
    "MINIO_SECRET_KEY",
    "MINIO_PORT",
    "MINIO_USE_SSL",
    "JWT_ACCESS_TOKEN_SECRET",
    "JWT_REFRESH_TOKEN_SECRET",
    "JWT_ACCESS_TOKEN_EXPIRATION_MS",
    "JWT_REFRESH_TOKEN_EXPIRATION_MS",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "AUTH_UI_REDIRECT",
    "FACEBOOK_APP_ID",
    "FACEBOOK_APP_SECRET",
    "FACEBOOK_CALLBACK_URL",
    "WEB_UI_REDIRECT",
    "MOBILE_UI_REDIRECT",
    "PORT",
    "NODE_ENV",
    "DOMAIN",
    "NEXT_PUBLIC_BASE_URL",
    "BACKEND_URL",
    "NEXT_PUBLIC_BACKEND_URL",
    "ALLOWED_ORIGINS",
    "MINIO_ENDPOINT_SETTINGS"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".expo/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "BACKEND_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "MINIO_ENDPOINT",
        "NODE_ENV",
        "NEXT_PUBLIC_BASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "env": [
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "MINIO_ENDPOINT",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "PORT",
        "NODE_ENV",
        "DOMAIN",
        "ALLOWED_ORIGINS",
        "MINIO_ENDPOINT_SETTINGS"
      ],
      "outputs": ["dist/**"]
    },
    "backend#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "JWT_ACCESS_TOKEN_SECRET",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "MINIO_ENDPOINT",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "PORT",
        "NODE_ENV",
        "DOMAIN",
        "ALLOWED_ORIGINS",
        "MINIO_ENDPOINT_SETTINGS"
      ]
    },
    "web#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "BACKEND_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "MINIO_ENDPOINT",
        "NEXT_PUBLIC_BASE_URL",
        "NODE_ENV"
      ]
    },
    "database#build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:prisma": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
