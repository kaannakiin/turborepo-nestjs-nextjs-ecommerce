{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "MINIO_ENDPOINT",
    "MINIO_ACCESS_KEY",
    "MINIO_SECRET_KEY",
    "MINIO_PORT",
    "MINIO_USE_SSL",
    "JWT_ACCESS_TOKEN_SECRET",
    "JWT_REFRESH_TOKEN_SECRET",
    "JWT_ACCESS_TOKEN_EXPIRATION_MS",
    "JWT_REFRESH_TOKEN_EXPIRATION_MS",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "AUTH_UI_REDIRECT",
    "FACEBOOK_APP_ID",
    "FACEBOOK_APP_SECRET",
    "FACEBOOK_CALLBACK_URL",
    "WEB_UI_REDIRECT",
    "MOBILE_UI_REDIRECT",
    "PORT",
    "NODE_ENV",
    "DOMAIN",
    "NEXT_PUBLIC_BASE_URL",
    "BACKEND_URL",
    "NEXT_PUBLIC_BACKEND_URL",
    "ALLOWED_ORIGINS"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "backend#build": {
      "dependsOn": ["^build"],
      "env": [
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "MINIO_ENDPOINT",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "PORT",
        "NODE_ENV",
        "DOMAIN",
        "ALLOWED_ORIGINS"
      ],
      "outputs": ["dist/**"]
    },
    "backend#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "JWT_ACCESS_TOKEN_SECRET",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_EXPIRATION_MS",
        "JWT_REFRESH_TOKEN_EXPIRATION_MS",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_UI_REDIRECT",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "FACEBOOK_CALLBACK_URL",
        "WEB_UI_REDIRECT",
        "MOBILE_UI_REDIRECT",
        "MINIO_ENDPOINT",
        "MINIO_ACCESS_KEY",
        "MINIO_SECRET_KEY",
        "MINIO_PORT",
        "MINIO_USE_SSL",
        "PORT",
        "NODE_ENV",
        "DOMAIN",
        "ALLOWED_ORIGINS"
      ]
    }
  }
}
